@{
    int take = 1;
    int skip = 0;
    bool plus = true;

    while (count > 0)
    {
        foreach (var picture in Model.Skip(skip).Take(take))
        {
            switch (take)
            {
                case 1:
                   <div class="onePictureContainer" style="background-image:url(@Url.Action("AlbumPictureCarusel", "Images", new { id = Model.ElementAt(0).Id }))">
        </div>
                    break;
                case 2:
                     <div class="twoPicturesContainer" style="background-image:url(@Url.Action("AlbumPictureCarusel", "Images", new { id = picture.Id }))">
                </div>
                    break;
                case 3:
