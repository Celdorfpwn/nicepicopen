                case 4: 
                <div class="fourPicturesContainer9" style="background-image:url(@Url.Action("AlbumPictureCarusel", "Images", new { id = picture.Id }))">
                </div>
                    break;
            }
            
        }
        <div style="clear:both"></div>
    
        skip += take;
        count -= take;
        if (take == 4)
        {
            plus = false;
        }
        if (take >= count)
        {
            take = count;
        }
        else if (plus)
        {
            take++;
        }
        else if (take == 1)
        {
            plus = true;
            take++;
        }
        else
        {
            take--;
        }
    
    }
    } 
